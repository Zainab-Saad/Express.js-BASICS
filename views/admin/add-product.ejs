<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/add-product.css">
</head>
<body>
    <%- include('../includes/nav.ejs') %>

    <main class="main">
        <h1 class="main-heading">Add a product here!!</h1>
        <div class="form-div">
            <form action="/admin/add-product" method="POST" class="form">
                    <input class= "form-input" type="text" name="title" placeholder="Product Title">
                    <textarea name="description" class="form-input" cols="30" rows="10" placeholder="Product Description"></textarea>
                    <input class= "form-input" type="number" step="0.01" name="price" placeholder="Product Price">
                    <input class= "form-input" type="text" name="imageUrl" placeholder="Product Image URL">
                        <button class="button" type="submit">
                            Add product
                        </button>
                    </input>
                </form>
        </div>    
    </main>
<%- include('../includes/end.ejs') %>