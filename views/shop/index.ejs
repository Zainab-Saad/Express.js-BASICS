<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/shop.css">
</head>
<body>
    <%- include('../includes/nav.ejs') %>

    <main class="main">
        <div class="shop-main">
            <h1 class="main-heading">Shopping Store</h1>
            <div class="form-div">
                <form action="/take-to-add-product" class="form">
                    <button type="submit" class="button">
                        Take me to Add product page!!
                    </button>
                </form>
            </div>
        </div>
        <!-- can write vanilla  js code here -->
        <% if (prods.length > 0 ) { %>
        <h3 class="main-heading">My Products</h3>
        <div class="grid">
            <% for (product of prods) { %>
            <article class="card product-item">
                <header class="card-header">
                    <h1 class="product_title"><%=product.title%></h1>
                </header>
                <div class="card__image">
                    <img src="<%=product.imageUrl%>" alt="<%=product.title%>">
                </div>
                <div class="card__content">
                    <h2 class="product__price">$<%=product.price%></h2>
                    <p class="product__description"><%=product.description%></p>
                </div>
                <div class="card__actions">
                    <button type="submit" class="btn">Add to Cart</button>
                </div>

            </article>
            <% } %>
       <% } else { %>
            <h1 class="main-heading">No Products Found</h1>
       <% } %>
    </main>
<%- include('../includes/end.ejs') %>